execute pathogen#infect()

colorscheme badwolf
syntax on

" filetype plugin indent on
set tabstop=4
set shiftwidth=4
set softtabstop=2
set autoindent
set expandtab
set smarttab

set nocompatible

" Folding Stuffs
set foldmethod=marker

set mouse=a

set cursorline

" searching
set hlsearch
set showmatch

set number
set ruler                     " show the line number on the bar
set more                      " use more prompt
set autoread                  " watch for file changes

set nobackup
set nowb
set noswapfile

set clipboard=unnamed
set paste
